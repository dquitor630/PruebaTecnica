@page "/createList"
@using PruebaTenica.Shared
@inject HttpClient http
@inject NavigationManager Navigation
<PageTitle>Create</PageTitle>
<h3>Add film</h3>
<EditForm Model="@_playList" OnValidSubmit="Post">
    <div class="form-group">
        <label>Playlist Name </label>
        <InputText @bind-Value="_playList.Name" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Add Playlist." />
    </div>
</EditForm>
@code {
    private PlayList _playList = new();
    private async Task Post()
    {
        await http.PostAsJsonAsync<PlayList>("/api/PlayLists/", _playList);
    }
}